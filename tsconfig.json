{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "locale": "es",
    "charset": "utf8",
    "pretty": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "webworker"],

    "types": [
      "enzyme",
      "jest",
      "react",
      "react-dom",
      "react-redux",
      "webpack-env"
   ],

    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "diagnostics": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "removeComments": true,

    "paths": {
      "@Components": ["src/components/"],
      "@Models": ["src/models/"],
      "@Tools": ["src/tools/"],
      "@Routes": ["src/routes/"],
      "@Assets": ["src/assets/"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
